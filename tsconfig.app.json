{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue", "eslint.config.mjs", "src/types/**/*.d.ts", "tailwind.config.ts"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
      "allowJs": true,
      "verbatimModuleSyntax": false,
      "composite": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "types": ["node"]
    }
  }
  